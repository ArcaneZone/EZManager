<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="3"
    tools:context=".fragment.customer.CustomerFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:elevation="100dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#252324"
        app:strokeColor="#424242"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/CustomerHistoryUserImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="7dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_old_project" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CustomerHistoryUserImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="See Old Projects"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/CustomerSeeExistingCustomerCard"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:elevation="100dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#252324"
        app:strokeColor="#424242"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/CustomercurrentUserImage"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_current_project" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CustomercurrentUserImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="See Current Project"
            android:textColor="@color/white"
            android:textSize="20dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:elevation="100dp"
        android:id="@+id/CustomerAddUserCard"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#252324"
        app:strokeColor="#424242"
        app:strokeWidth="1dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/CustomerAddUserImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_undraw_add_user_re_5oib" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CustomerAddUserImage"
                android:text="Add New Project"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>