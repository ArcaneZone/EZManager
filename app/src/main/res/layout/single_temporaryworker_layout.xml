<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="25dp"
    app:cardElevation="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="dailyWorkerName"
            android:id="@+id/DailyWorkerName"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:fontFamily="@font/font1_regular"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/dailyWorkerWage"
            android:text="Amount to Pay"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font1_regular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dailyWorkerDate"
            android:text="FromDate to ToDate"
            android:textColor="#364f6b"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/font1_regular"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>